<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/primary_color"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/menu_logo"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:src="@drawable/exercise_logo"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />


    <TextView
        android:id="@+id/exercise_name_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="@string/exercise_name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="28dp"
        app:layout_constraintHorizontal_weight="0.3"
        app:layout_constraintTop_toTopOf="@id/menu_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:id="@+id/exercise_name_edit"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:background="@drawable/edittext"
        android:padding="8dp"
        android:hint="@string/exercise_name_hint"
        android:inputType="textPersonName"
        android:layout_marginStart="28dp"
        app:layout_constraintHorizontal_weight="0.7"
        app:layout_constraintTop_toBottomOf="@id/exercise_name_label"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/exercise_content_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/exercise_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginStart="28dp"
        app:layout_constraintTop_toBottomOf="@id/exercise_name_edit"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/exercise_content_edit"
        android:layout_width="360dp"
        android:layout_height="440dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/edittext"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:padding="8dp"
        android:textSize="16sp"
        android:maxLength="396"
        android:maxLines="18"
        android:hint="@string/exercise_content_hint"
        app:layout_constraintHorizontal_weight="0.7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exercise_content_label" />

    <Button
        android:id="@+id/exercise_register_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_custom"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:visibility="invisible"
        android:enabled="false"
        android:text="登録"
        app:layout_constraintTop_toBottomOf="@id/exercise_content_edit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/exercise_inactive_register_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_custom"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="登録"
        android:enabled="false"
        android:backgroundTint="@color/pale_red_color"
        app:layout_constraintTop_toBottomOf="@id/exercise_content_edit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>