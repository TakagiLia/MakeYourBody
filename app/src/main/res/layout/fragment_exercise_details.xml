<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="416dp"
        android:layout_height="80dp"
        android:background="@color/primary_color"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/exercise_details_logo"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:src="@drawable/exercisedetails_logo"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/exercise_details_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exercise_details_name_label"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/exercise_details_logo"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageButton
        android:id="@+id/exercise_details_name_edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/editable_icon24"
        android:background="@color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/exercise_details_logo"
        app:layout_constraintLeft_toRightOf="@id/exercise_details_name_label"/>

    <EditText
        android:id="@+id/exercise_details_name"
        android:layout_width="386dp"
        android:layout_height="0dp"
        android:text="Textview"
        android:textSize="16sp"
        android:padding="8dp"
        android:enabled="false"
        android:textColor="@color/black"
        android:background="@drawable/details_edittext"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/exercise_details_name_label"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/exercise_details_content_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exercise_details_content_label"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/exercise_details_name"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageButton
        android:id="@+id/exercise_details_content_edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/editable_icon24"
        android:background="@color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/exercise_details_name"
        app:layout_constraintLeft_toRightOf="@id/exercise_details_content_label"/>

    <EditText
        android:id="@+id/exercise_details_content"
        android:layout_width="386dp"
        android:layout_height="480dp"
        android:text="Textview"
        android:layout_marginLeft="16dp"
        android:gravity="top"
        android:padding="8dp"
        android:enabled="false"
        android:textColor="@color/black"
        android:background="@drawable/details_edittext"
        app:layout_constraintTop_toBottomOf="@id/exercise_details_content_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"/>

    <Button
        android:id="@+id/exercise_details_save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_custom"
        android:text="@string/exercise_details_content_save"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/exercise_details_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>