<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33ff7f50"
    android:elevation="4dp">

    <TextView
        android:id="@+id/picker_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/age_picker_title"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tens_place_picker"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <NumberPicker
        android:id="@+id/hundreds_place_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#33ff7f50"
        android:theme="@style/NumberPickerText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tens_place_picker"
        app:layout_constraintTop_toTopOf="parent" />

    <NumberPicker
        android:id="@+id/tens_place_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#33ff7f50"
        android:theme="@style/NumberPickerText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/hundreds_place_picker"
        app:layout_constraintRight_toLeftOf="@id/ones_place_picker"
        app:layout_constraintTop_toTopOf="parent" />

    <NumberPicker
        android:id="@+id/ones_place_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#33ff7f50"
        android:theme="@style/NumberPickerText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tens_place_picker"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/picker_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="#05ff7f50"
        android:text="@string/age_picker_cancel"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/picker_ok_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ones_place_picker" />

    <Button
        android:id="@+id/picker_ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="#05ff7f50"
        android:text="@string/age_picker_ok"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ones_place_picker" />
</androidx.constraintlayout.widget.ConstraintLayout>
