<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <Button
            android:id="@+id/attr_trainee"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:text="@string/signup_attr_trainee"
            android:background="@drawable/button_gender_select"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/attr_trainer"
            app:layout_constraintHorizontal_chainStyle="packed"/>
        <Button
            android:id="@+id/attr_trainer"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:text="@string/signup_attr_trainer"
            android:background="@drawable/button_gender_select"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/attr_dual"
            app:layout_constraintLeft_toRightOf="@id/attr_trainee"
            />
        <Button
            android:id="@+id/attr_dual"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:text="@string/signup_attr_dual"
            android:background="@drawable/button_gender_select"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/attr_trainer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

